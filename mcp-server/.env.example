# Guardrail MCP Server Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Server Configuration
# =============================================================================
MCP_PORT=8080
WEB_PORT=8081
WEB_ENABLED=true
LOG_LEVEL=info
REQUEST_TIMEOUT=30s
SHUTDOWN_TIMEOUT=30s

# =============================================================================
# Profiling (disable in production)
# =============================================================================
PPROF_ENABLED=false
PPROF_PORT=6060

# =============================================================================
# Health Check Configuration
# =============================================================================
HEALTH_CHECK_TIMEOUT=3s

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=guardrails
DB_USER=guardrail
DB_PASSWORD=change_me_in_production
DB_SSLMODE=disable

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_me_in_production
REDIS_USE_TLS=false

# =============================================================================
# Security Configuration (REQUIRED - Generate strong random values)
# =============================================================================
# Generate with: openssl rand -hex 32
MCP_API_KEY=generate_a_32_byte_random_key_here
IDE_API_KEY=generate_a_different_32_byte_random_key_here

# JWT Configuration (REQUIRED)
# Generate with: openssl rand -hex 64
JWT_SECRET=generate_a_64_byte_random_secret_here_for_jwt_signing
JWT_ISSUER=guardrail-mcp
JWT_EXPIRY=15m
JWT_ROTATION_HOURS=168

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
MCP_RATE_LIMIT=1000
IDE_RATE_LIMIT=500
SESSION_RATE_LIMIT=100

# =============================================================================
# Cache TTL Configuration
# =============================================================================
CACHE_TTL_RULES=5m
CACHE_TTL_DOCS=10m
CACHE_TTL_SEARCH=2m

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_VALIDATION=true

# =============================================================================
# Build Information (set automatically during build)
# =============================================================================
VERSION=dev
BUILD_TIME=unknown
GIT_COMMIT=unknown
